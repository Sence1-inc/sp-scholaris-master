<html>
  <style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .header {
    background-color: #002147;
    color: #fff;
    text-align: center;
    padding: 10px;
  }

  .content {
    background-color: #fff;
    padding: 20px;
  }

  .button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
  }

  .footer {
    text-align: center;
    padding: 10px;
    background-color: #002147;
    color: #fff;
  }

  .button {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    max-width: fit-content;
    width: 100%;
    background-color: #f36b3b;
    border: none;
    border-radius: 16px;
    padding: 15px 30px;
    cursor: pointer;
  }

  .color-secondary {
    color: #f36b3b;
  }


  </style>
  <body>
    <div class="container">
      <div class="header">
        <h1>Newsletter Subscription</h1>
      </div>

      <div class="content">
        <p>Hello <%= @email %>!</p>

        <div><%= raw @content %></div>
      </div>

      <div class="footer">
        <p>&copy; <%= Time.now.year %> Scholaris. All rights reserved.</p>
      </div>
    </div>
  </body>
</html>